<% include ../partials/header %>
<div class="container">
    <div class="row">
      <div style="width: 30%; margin: 25px auto;">
        <form action="/posts/<%= posts %>/answer/<%= answer._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <h1 style="text-align:center;">Edit your Answer</h1>
            </div>
         <div class="form-group">
           <textarea class="form-control" type="text" name="answer[text]"><%= answer.text %></textarea>
         </div>
         <div class="form-group">
           <button class="btn btn-large btn-primary btn-default btn-block">Submit</button>
         </div>
        </form>
        <a href="/posts/<%= posts._id %>">Go Back</a>
     </div>
    </div>
</div>
<% include ../partials/footer %>