<% include ../partials/header.ejs %>
  <link href="/stylesheets/profile.css" rel="stylesheet">
  <script src="/js/profile.js" type="text/javascript"></script>
  <% let qa=user[0].type==='Student'? 'Questions' :'Answers' %>
    <div class="container emp-profile">
      <form method="post">
        <div class="row">
          <div class="col-md-4">
            <div class="profile-img">
              <img src="<%= user[0].displayPic %>" alt="" />
              <% if(currentUser.username===user[0].username){ %>
              <div class="file btn btn-lg btn-primary">
                <a href="/profile/<%= user[0].username %>/changepic">Change Photo</a>
                <% } %>
              </div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="profile-head">
              <h5>
                <%= user[0].fullname %>
              </h5>
              <h6>
                <%= user[0].type %>
              </h6>
            </div>
            <div class="mt-3">
              <% if(user[0].type==='Student'){ %>
                <p>Total questions asked :
                  <%= post.length %>
                </p>
                <% }else{ %>
                  <p>Total answers :
                    <%= answer.length %>
                  </p>
                  <% } %>
            </div>
            <div>
              <% if(user[0].type==='Student'){ %>
                <% if(post.length>0){ %>
                  <p>
                    <%= qa %> by
                      <%= user[0].fullname.substr(0,user[0].fullname.indexOf(" ")) %>:</p>
                  <% } %>
                    <p>
                      <ol>
                        <% post.forEach(function(post){ %>
                          <li>
                            <a href="/posts/<%= post._id %>">
                              <h5>
                                <%= post.question %>
                              </h5>
                            </a>
                          </li>
                          <% }); %>
                      </ol>
                    </p>
                    <% } %>
            </div>
          </div>
          <% if(currentUser && currentUser.username===user[0].username){ %>
            <div class="col-md-2">
              <form class="delete" action="/profile/<%= user[0].username %>" method="POST">
                <span href="#delete" class="delete-profile">Delete Profile</span>
                <p class="delete-opt">Are you sure?</p>
                <button class="delete-opt btn btn-danger btn-sm">Yes</button>
              </form>
              <button type="button" class="not-sure delete-opt btn btn-default btn-sm">No</button>
            </div>
            <% } %>
        </div>
        <div class="row ml-5">
          <div class="col-md-4">
            <div class="tab-content profile-tab" id="myTabContent">
              <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                <div class="row">
                  <div class="col-md-4">
                    <label>User Id</label>
                  </div>
                  <div class="col-md-4">
                    <p>
                      <%= user[0].uid %>
                    </p>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-4">
                    <label>Name</label>
                  </div>
                  <div class="col-md-4">
                    <p>
                      <%= user[0].fullname %>
                    </p>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-4">
                    <label>Email</label>
                  </div>
                  <div class="col-md-4">
                    <p>
                      <%= user[0].email %>
                    </p>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-4">
                    <label>Date of birth</label>
                  </div>
                  <div class="col-md-4">
                    <p>
                      <%= user[0].dob %>
                    </p>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-4">
                    <label>Department</label>
                  </div>
                  <div class="col-md-4">
                    <p>
                      <%= user[0].department %>
                    </p>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-4">
                    <label>Profession</label>
                  </div>
                  <div class="col-md-4">
                    <p>
                      <%= user[0].type.toUpperCase() %>
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </form>
    </div>
    <% include ../partials/footer.ejs %>
